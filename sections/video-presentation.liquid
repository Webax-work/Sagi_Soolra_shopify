<script>
  document.addEventListener('DOMContentLoaded', function () {
  const container = document.querySelector('.scroller_presnt');
  const buttonRight = document.getElementById('slideRight');
  const buttonLeft = document.getElementById('slideLeft');

  // Adjust the scroll behavior for the buttons
  buttonRight.onclick = function () {
    container.scrollLeft += 200; // Scroll by 200px to the right
  };

  buttonLeft.onclick = function () {
    container.scrollLeft -= 200; // Scroll by 200px to the left
  };

  // Detect when scroll reaches the end or beginning
  container.addEventListener('scroll', function () {
   
    const scrollLeft = container.scrollLeft;
    const scrollWidth = container.scrollWidth;
    const containerWidth = container.clientWidth;

    // When scrolled to the right (end)
    if (scrollLeft + containerWidth >= scrollWidth) {
      $('div#slideRight').addClass('hide_svg')
    }else{
       $('div#slideRight').removeClass('hide_svg')
    }

    // When scrolled to the left (beginning)
    if (scrollLeft === 0) {
    $('div#slideLeft').addClass('hide_svg')
    }else{
          $('div#slideLeft').removeClass('hide_svg')

    }
  });
});

