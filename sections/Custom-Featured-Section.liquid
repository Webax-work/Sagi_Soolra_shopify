<div class="features-main-section {{ section.settings.layout_position }}">
  <div class="container">
    {% if section.settings.title != blank %}
      <div class="features-txt-coll">
        <h3>{{ section.settings.title }}</h3>
      </div>
    {% endif %}

    <div class="row">
      {% if section.settings.layout_position == "image-left" %}
        <div class="featured-image-coll">
          <div class="featured-image-box">
            <img src="{{ section.settings.image_1 | img_url: 'master' }}">
          </div>
        </div>
        <div class="featured-image-txt-coll">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <div class="inner-img-txt-coll">
                <div class="features-image-icon-box">
                  <img src="{{ block.settings.icon | img_url: 'master' }}">
                </div>
                <div class="features-heding-para">
                  <h4>{{ block.settings.heading }}</h4>
                  <span>{{ block.settings.text }}</span>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% else %}
        <div class="featured-image-txt-coll">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <div class="inner-img-txt-coll">
                <div class="features-image-icon-box">
                  <img src="{{ block.settings.icon | img_url: 'master' }}">
                </div>
                <div class="features-heding-para">
                  <h4>{{ block.settings.heading }}</h4>
                  <span>{{ block.settings.text }}</span>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="featured-image-coll">
          <div class="featured-image-box">
            <img src="{{ section.settings.image_1 | img_url: 'master' }}">
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Featured Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Features"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Main Image"
    },
    {
  "type": "select",
  "id": "layout_position",
  "label": "Image Position",
  "default": "image-left",
  "options": [
    {
      "value": "image-left",
      "label": "Image Left, Text Right"
    },
    {
      "value": "image-right",
      "label": "Image Right, Text Left"
    }
  ]
}
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Description"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Custom Featured Section",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "heading": "Flipping Cover",
            "text": "Easily flipping cover for maximum something"
          }
        },
        {
          "type": "feature",
          "settings": {
            "heading": "Bluetooth Connection",
            "text": "Connect by directly linking your iPhone via Bluetooth."
          }
        }
      ]
    }
  ]
}
{% endschema %}
